<%= form_for ([:admin,@post]) do |f| %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
<div>
	<%= f.label :title %>
	<%= f.text_field :title %>
</div><br>
<div>
	<%= f.label :content %>
	<%= f.text_field :content %>
</div>
<div>
	<span>check for yes<%=f.check_box :is_publish, {}, 'Yes', 'No'%></span>
</div>
<br>

	<div>
		<%= f.submit  %>
	</div>
<% end %>
